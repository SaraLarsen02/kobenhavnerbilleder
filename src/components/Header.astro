---
import Link from "../components/Link.astro";
---

<div x-data="{ showmenu: false }" class="p-4 fixed lg:static w-full bg-slate-200">
  <div id="navbar" class="flex flex-row justify-between">
    <!-- Logo i ventre side -->
    <div id="logo" class="">
      <a href="#hero">Logo</a>
    </div>
    <!-- Links i højre side -->
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-4">
        <li class=""><Link href="#hero" target="_self" variant="textlink" size="standard">Københavnerbilleder</Link></li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->
        <li class=""><Link href="#kapitler" target="_self" variant="textlink" size="standard">Bogens indhold</Link></li>
        <li class=""><Link href="#forfatteren" target="_self" variant="textlink" size="standard">Forfatteren</Link></li>
        <li class=""><Link href="#formular" target="_self" variant="textlink" size="standard">Køb nu</Link></li>
      </ul>
    </nav>
    <!-- Burgermenu-knap -->
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu"
      ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <!-- Burgermenuen, når den er åbnet -->
  <nav id="mobilmenu" class="flex flex-col content-center pt-4" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul>
      <li class="text-center py-2 border-y-2"><Link href="#hero" target="_self" variant="textlink" size="standard">Københavnerbilleder</Link></li>
      <li class="text-center py-2 border-b-2"><Link href="#kapitler" target="_self" variant="textlink" size="standard">Bogens indhold</Link></li>
      <li class="text-center py-2 border-b-2"><Link href="#forfatteren" target="_self" variant="textlink" size="standard">Forfatteren</Link></li>
      <li class="text-center py-2 border-b-2"><Link href="#formular" target="_self" variant="textlink" size="standard">Køb nu</Link></li>
    </ul>
  </nav>
</div>
