---
// Henter parametrene fra Astro.props
const { href = "#", target = "_self", variant = "textlink", size = "standard" } = Astro.props;

// Definerer den styling, der gør sig gælende for link
const linkStyling = "font-medium text-lg";

// Definerer den styling, der gør sig gældende for de forskellige varianter
const variantClasses = {
  primary: "border-2 border-red-600 bg-red-600 text-white hover:bg-transparent hover:text-red-600",
  secondary: "border-2 border-red-600 text-red-600 hover:bg-red-600 hover:text-white",
  textlink: "text-red-600 hover:underline",
};

// Definerer den stling, der før sig gældende for de forskellige størrelser
const sizeClasses = {
  small: "px-2 py-1",
  medium: "px-4 py-2 max-w-max",
  large: "px-5 py-4",
};
---

<a href={href} target={target} class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}><slot /></a>
