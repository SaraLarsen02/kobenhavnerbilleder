---
// Henter parametrene fra Astro
const { variant = "", size = "" } = Astro.props;

// Definerer generel styling
const buttonStyling = "border-2 border-red-600 font-medium text-lg";

// Definerer den styling, der gør sig gældende for de forskellige varianter
const variantClasses = {
  primary: "bg-red-600 text-white hover:bg-transparent hover:text-red-600",
  secondary: "text-red-600 hover:bg-red-600 hover:text-white",
};

// Definerer den stling, der før sig gældende for de forskellige størrelser
const sizeClasses = {
  small: "px-2 py-1",
  medium: "px-4 py-2",
  large: "px-5 py-4",
};
---

<div>
  <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>
